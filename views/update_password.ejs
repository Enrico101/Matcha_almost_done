<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <header>Matcha!</header>
    <nav>
        <a href="/profile">profile</a>
        <a href="/home">Home</a>
        <a href="/search">Search</a>
        <a href="/chat_screen">Chat</a>
        <a href="/view_history">view_history</a>
        <a href="/visit_history">visit_history</a>
        <a href="/like_history">like history</a>
        <a href="/profile_settings">Profile Setting</a>
        <a href="/logout">logout</a>
    </nav>
    <br />
    <form action="/profile_settings/update_password" method="post">
        <input type="text" name="old_pass" placeholder="Old password">
        <input type="password" name="new_pass" placeholder="New password">
        <input type="submit" name="submit" value="Update">
    </form>
    <br />
    <footer>2019</footer>
    <%
        if (updated_password == "yes")
        {
    %>
            <script>
                alert("Password has been successfully updated!");
            </script>
    <%
        }
        else if (empty_field == "yes")
        {
    %>
            <script>
                alert("A field seems to be empty!");
            </script>
    <%
        }
        else if (incorrect_length == "yes")
        {
    %>
            <script>
                alert("The length of the new password needs to be greater then or equal to 6!");
            </script>
    <%
        }
        else if (incorrect_format == "yes")
        {
    %>
            <script>
                alert("The format should consist of at leat one uppercase letter, one lowercase letter and one number!");
            </script>
    <%
        }
        else if (incorrect_old_pass == "yes")
        {
    %>
            <script>
                alert("The current password is incorrect!");
            </script>
    <%
        }
    %>
</body>
</html>